     ~/.config/bspwm/scripts/compton-toggle.sh

#Rofi theme selector
ctrl + alt + r
   rofi-theme-selector

#Pulse Audio Control
ctrl + alt + u
     pavucontrol

#P for programming loads the current programming side project
ctrl + alt + p
    kitty --session /home/niels/.config/kitty/sessions/yar

#Slack
ctrl + alt + s
    slack

#htop
ctrl + alt + h
    kitty

