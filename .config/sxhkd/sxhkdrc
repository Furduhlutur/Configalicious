#########################
# SUPER + FUNCTION KEYS #
#########################

#Spotify
super + F10
    spotify

#########################
# SUPER + ... KEYS      #
#########################

#Toggle fullscreen of window
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#Hide polybar
super + y
    polybar-msg cmd toggle

#Oblogout
super + x
    oblogout

#Xkill
super + Escape
    xkill

#Terminal emulator
super + Return
	kitty

#Rofi
super + @space
	rofi -modi "window,run,drun" -show drun -fuzzy -hide-scrollbar

#Close and Kill
super + {_,shift + }w
	bspc node -{c,k}

#Thunar
super + e
	thunar

#Alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#Select password from password pass (The unix standard)
super + p
    rofi-pass

#Focus on older or newer node in focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

#########################
# SUPER + SHIFT KEYS    #
#########################

#DMENU
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

#Logout
super + shift + x
	bspc quit

